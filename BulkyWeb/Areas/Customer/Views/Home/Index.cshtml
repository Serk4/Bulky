@model IEnumerable<Product>

<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-id="@product.Id">
                            <img src="@(string.IsNullOrEmpty(product.ImageUrl) ? "/images/products/default.png" : product.ImageUrl)" class="card-img-top rounded" alt="@product.Title" style="height: 200px; object-fit: cover;" />
                        </a>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">
                                @product.Title
                            </h5>
                            <p class="card-text text-truncate">
                                @product.Author
                            </p>
                            <div class="mt-auto">
                                <span class="fw-bold text-primary">$@product.Price.ToString("0.00")</span>
                                <a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-productId="@product.Id" class="btn btn-sm btn-outline-primary float-end">View Details</a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
